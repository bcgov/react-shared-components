{
  "name": "shared-components",
  "version": "1.2.4",
  "main": "build/index.js",
  "private": true,
  "dependencies": {
    "@bcgov/bootstrap-theme": "github:bcgov/bootstrap-theme",
    "bootstrap": "^4.6.0",
    "history": "^5.0.0",
    "jquery": "^3.6.0",
    "prop-types": "^15.7.2",
    "react-bootstrap": "^1.4.0",
    "react-datepicker": "^3.8.0",
    "react-icons": "^4.2.0",
    "react-router-dom": "^5.1.2",
    "regenerator-runtime": "^0.13.7",
    "storybook-addon-state": "^1.0.3"
  },
  "scripts": {
    "build": "babel src -d build --copy-files",
    "prepare": "yarn run build",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public --docs",
    "deploy-storybook": "storybook-to-ghpages",
    "test": "jest --env=jsdom",
    "coverage": "jest --coverage --env=jsdom",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "precommit": "pretty-quick --staged"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.16.7",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-docs": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addon-storyshots": "^6.4.22",
    "@storybook/addon-viewport": "6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/preset-create-react-app": "^4.1.0",
    "@storybook/react": "^6.4.22",
    "@storybook/storybook-deployer": "^2.8.11",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "5.1.3",
    "@testing-library/user-event": "^13.5.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^6.0.0",
    "jest": "26.6.3",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^16.14.0",
    "react-dom": "^16.13.1",
    "react-is": "^17.0.2",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^16.12.0",
    "storybook-react-context": "^0.6.0"
  },
  "resolutions": {
    "jest": "26.6.3",
    "glob-parent": "^5.1.2",
    "trim": "^0.0.3"
  },
  "files": [
    "/build"
  ],
  "jest": {
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "transform": {
      "^.+\\.mdx$": "@storybook/addon-docs/jest-transform-mdx",
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@storybook/addon-docs)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js",
      "./src/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|PNG|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|pdf)$": "<rootDir>/src/AssetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/src/AssetsTransformer.js"
    },
    "verbose": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "coverage"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit"
    }
  }
}
